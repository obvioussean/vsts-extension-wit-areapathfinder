{
    "manifestVersion": 1,
    "id": "vsts-extension-wit-areapathfinder",
    "version": "1.0.13",
    "name": "Area Path Finder",
    "scopes": [
        "vso.work",
        "vso.work_write"
    ],
    "description": "Finds area paths related to a person by the teams they are a member of",
    "publisher": "seanferguson",
    "icons": {
        "default": "img/logo.png"
    },
    "screenshots": [
        {
            "path": "img/dialogexample.png"
        }
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Work Item",
        "Team"
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "links": {
        "learn": {
            "uri": "https://github.com/sferg-msft/vsts-extension-wit-areapathfinder"
        },
        "support": {
            "uri": "https://github.com/sferg-msft/vsts-extension-wit-areapathfinder/issues"
        }
    },
    "branding": {
        "color": "#5C2D91",
        "theme": "dark"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "index.html",
            "addressable": true
        },
        {
            "path": "dialog.html",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "action",
            "type": "ms.vss-web.action",
            "description": "",
            "targets": [
                "ms.vss-work-web.work-item-context-menu"
            ],
            "properties": {
                "text": "Area Path Finder",
                "icon": "img/icon-light.png",
                "group": "areapathfinder",
                "uri": "index.html"
            }
        },
        {
            "id": "dialog",
            "type": "ms.vss-web.control",
            "description": "The content to be displayed in the dialog",
            "targets": [],
            "properties": {
                "uri": "dialog.html"
            }
        }
    ]
}